let first = 'Knowledge is power but enthusiasm pulls the switch.';

let second = 'Do or do not. There is no try.';
let third = '4,8,15,16,23,42';

// You can even call methods on string literals
// console.log('rye ryan bscs'.toUpperCase()); // RYE RYAN BSCS

let mySplit = third.split(,);
console.log(mySplit); // [ '4', '8', '15', '16', '23', '42' ]

let mySlice = first.slice(13, 18); // 13th index to 18th index
console.log(mySlice); // power

let mySubstr = first.substr(13, 5); / 13th index + 5 index
console.log(mySubstr); // power

let myEndsWith = second.endsWith('try');
console.log(myEndsWith); // true

let myStartsWith = second.startsWith('Do');
console.log(myStartsWith); // true

let myInclude = second.includes('There');
console.log(myInclude); // false


let myTrim = '     RYE      ';
console.log(myTrim.length); // around 16
console.log(myTrim.trim().length); // 3, 'trim()' remove those empty spaces
