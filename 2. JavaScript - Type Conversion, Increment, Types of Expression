________________
TYPE CONVERSION
________________

// coercion.js

let a = 8;
let b = "2";

let c = a + b;

console.log("Answer: " +c) // 82, because '2' string

node coercion

>>>parseInt(b, 10)<<<

let a = 8;

let b = "2";

b = parseInt(b, 10) // "10" is only parseInt passer not totally change 2 into 10.

let c = a + b;

console.log("Answer: " +c) // 82, because '2' string

node coercion

>>>NaN - Not a Number<<<

let d = parseInt("Rye", 10);

let e = isNaN(d);

console.log(d); // NaN

console.log(e); // True

_______________
INCREMENTATION
_______________

var a = 1;

a++; // +1

console.log(a++); // +1,  2

console.log(a); // 3

var b = 1;

b++;

console.log(++b); // 3

console.log(b); // 3

____________________
TYPES OF EXPRESSION
____________________

a; // this is bad

let a; // variable declaration

a = 4; // assign a value
