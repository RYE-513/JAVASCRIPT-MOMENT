OBJECT LITERALS

// Object Literal - is when you declare an Object in JavaScript code which is a variable that stores data in key-value paits.
// JSON - means JavaScript Object Notation is a standard text-based format for representing structured data based on JavaScript Object Syntax.
// it is commonly used for transmitting data in web applications.

let car = {
    make: 'bmw',
    model: '745li',
    year: 2010,
    getPrice: function() {
       return 5000; // perform some calculation
    },
    printDescription: function() {
	console.log(this.make + ' ' + this.model);
    }
}

car.printDescription();
console.log(car.year);

console.log(car['year']); // this is not nice to print this

///////////////////////////////////

var anotherCar = {};
anotherCar.whatever = 'bob';
console.log(anotherCar.whatever);

var a = {
    myProperty: { b : 'hi' }
};
console.log(a.myProperty.b);

var c = {
    myProperty: [
      { d: 'this' },
      { e: 'can' },
      { f: 'get' },
      { g: 'crazy' },
    ]
};

///////////////////////////////////

let carLot = [
    { year: 2017, make: 'Toyota', model: '4Runner' },
    { year: 2015, make: 'BMW', model: '528i' },
    { year: 1982, make: 'Buick', model: 'Skylark' },
];


