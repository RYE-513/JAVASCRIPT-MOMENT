_________
FOR LOOP
_________

// For Loop

for (i = 0; i < 10; i++) {
    console.log(i) // 0 ... 9
}

let a = [4, 8, 15, 16, 23, 42]
for (i = 0; i < a.length; i++) {
    console.log(a[i]);
}

___________
WHILE LOOP
___________

let x = 1
while(x < 10) {
    console.log(x); // or console.log(x++);
    x++;
}

// While Loop with Condition Statements

let x = 1
while(x < 10) {
    console.log(x++);
    
    if (x == 7) { // if (x == 7) break; - this is clean version
        break;
    }
}
